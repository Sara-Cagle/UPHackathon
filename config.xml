<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id        = "com.example.UP.sleepStation"
	versionCode="1"
	version   = "1.0">

    <name>Sleep Station</name>
    
    <description>
    Sleep Station Safety App
    </description>
    
    <author href="github.com/Sara-Cagle/UPHackathon" 
    email="">
    Apps over Naps (Sara Cagle, Taylor Isom, Matthew Kocmoud)
    </author>
    
    <gap:platform name="android" />
    <preference name="phonegap-version" value="3.3.0" />
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
    <!--we might want to set fullscreen to true-->
    
    <!--might get rid of these, or change them-->
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="disallowOverscroll" value="true" />
    
    <preference name="exit-on-suspend" value="false" />

    <!--disables putting a gloss on the icon-->
    <preference name="prerendered-icon" value="false" />


    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    
    <preference name="BackgroundColor" value="0xffffffff "/>


    <icon src="res/icon/Logo.png" gap:plantform="android" />
    <!--icon src="res/icon/Logo.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/Logo.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/Logo.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/Logo.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="res/icon/Logo.png" gap:platform="android" gap:density="xxhdpi" /-->

    <gap:splash src="res/screen/Screen.png" gap:plantform="android" />
    <!--gap:splash src="res/screen/Screen.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/Screen.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/Screen.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/Screen.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res/screen/Screen.png" gap:platform="android" gap:density="xxhdpi" /-->

    <access origin="*" subdomains="true" />


</widget>